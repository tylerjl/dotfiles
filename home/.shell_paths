
# Prepended paths
for p in /usr/local/{s,}bin ; do
  if [ -d "${p}" ] ; then
    PATH=$p:${PATH}
  fi
done

# Appended paths
for p in $HOME/{opt/,.,.cabal/,}bin ; do
  echo $PATH | grep ":$p:" &>/dev/null && continue
  if [ -d "${p}" ] ; then
    PATH=${PATH}:$p
  fi
done

# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

